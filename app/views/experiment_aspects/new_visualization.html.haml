- @submenu = :my_experiments
- @section = :experiments
- @section_title = raw t '.title', type: @aspect.type.capitalize

.page-header
  = raw t '.info', type: @aspect.type

.row
  .col-sm-12
    = form_for @aspect, as: :aspect, url: experiment_aspects_path(@experiment.id), html: { class: 'aspect_form' } do |f|
      = f.hidden_field :type

      .form-group
        = f.label :name, class: "control-label"
        = f.text_field :name, class: "form-control", required: true

      .form-group
        %p
          %strong Display URL
          %span#js-state
        = f.text_field :data, class: 'form-control'

      .form-group
        = f.submit t(".submit"), class: "btn btn-default"
        = link_to t(".cancel"), experiment_path(@experiment.id), class: "btn btn-default", id: "cancel", data: { bbconfirm: "Are you sure to leave the editor?" }
