- if @subsection != :new and @subsection != :manage
  = icon_link_to 'add', :new_experiment, class: 'add'
  - managed_experiments = SummaryLoader.user_managed_experiments(current_user_id)
  - if managed_experiments.any?
    .settings
      = icon_link_to 'settings', "#", class: 'dropdown-toggle', data: { toggle: 'dropdown' }, role: 'button'
      %ul.dropdown-menu.dropdown-menu-right
        - managed_experiments.each do |e|
          %li= link_to e[:id], manage_experiment_path(e[:id])
= icon_link_to 'help', '#help'
