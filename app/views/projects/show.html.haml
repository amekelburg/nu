- @submenu       = :my_projects
- @section       = :projects
- @section_title = raw t '.title', id: @project.project_id

- content_for :actions do
  = icon_link_to 'subject', '#profile-section', class: 'js-section-switch'
  = icon_link_to 'settings_input_component', '#experiments-section', class: 'js-section-switch active'
  = icon_link_to 'people', '#team-section', class: 'js-section-switch'

.page-header
  = raw t '.info', owner: @project.owner

.row
  .col-sm-12
    #profile-section.hide
      .row.section-row
        .col-sm-12.f.actions
          %h4= t ".project_profile"
      .row.section
        .col-sm-12
          %table.table.table-bordered
            - @profile.each do |f|
              - k = f.name
              - next unless Project::PROFILE_FIELDS.include?(k)
              - v = f.value
              %tr
                %td.col-sm-3= t "page_project_info.project_leader.project_#{k}.label"
                %td.col-sm-9= v

    #team-section.hide
      .row.section-row
        .col-sm-12.f.actions
          %h4= t ".project-team"
      .row.section
        .col-sm-12.body
          %span.spinner Loading. Please wait&hellip;

    #experiments-section
      .row.section-row
        .col-sm-12.f.actions
          %h4= t ".experiments"
      .row.section
        .col-sm-12.body
          %span.spinner Loading. Please wait&hellip;
