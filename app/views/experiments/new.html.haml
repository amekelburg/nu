- @submenu = :new_experiment
- @section = :experiments
- @section_title = raw t '.title'
- @subsection = :new

.page-header
  = raw t '.info'

.row
  = form_tag experiments_path, { class: 'form-horizontal' } do
    = render partial: 'new_experiment_fields'

    .form-group
      .col-sm-offset-2.col-sm-4
        = submit_tag t(".submit"), class: "btn btn-default"
        = link_to t(".cancel"), :back, class: "btn btn-default", id: "cancel", data: { confirm: "Are you sure to leave the editor?" }
